{
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"plugins": [
		"react",
		"jsx-a11y",
		"prettier"
	],
	"parser": "babel-eslint",
	"parserOptions": {
		"sourceType": "module",
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"jsx": true
		}
	},
	"env": {
		"browser": true,
		"node": true
	},
	"settings": {
		"react": {
			"createClass": "createReactClass", // Regex for Component Factory to use, default to "createReactClass"
			"pragma": "React"  // Pragma to use, default to "React"
		}
	},
	"rules":{
		"semi": ["error", "always"]	
	}
}